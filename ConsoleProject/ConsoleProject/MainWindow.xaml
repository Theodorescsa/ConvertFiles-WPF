<Window x:Class="WpfUploadFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfUploadFile"
        Title="Upload File" Height="500" Width="800">
    
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/media/images/bgr.jpg"/>
        </Grid.Background>
        <!-- TabControl acting as the Navbar -->
        <TabControl>
            <TabItem Header="Trang chủ">
                <local:HomeControl />
            </TabItem>
            <!-- Tab for Main Functionality -->
            <TabItem Header="Chức Năng Chính">
                <local:FileConversionControl />
            </TabItem>

            <!-- Tab for Data Management -->
            <TabItem Header="Quản Lý Dữ Liệu">
                <local:FileListControl />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
