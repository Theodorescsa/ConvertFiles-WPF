<UserControl x:Class="WpfUploadFile.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="500" Width="800">
    <Grid>
        <!-- Đặt ảnh nền cho toàn bộ Grid -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/media/images/bgr.jpg"/>
        </Grid.Background>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Chào mừng đến với ứng dụng Convert File!" 
                       FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
