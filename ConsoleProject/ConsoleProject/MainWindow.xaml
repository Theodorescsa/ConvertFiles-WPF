<Window x:Class="WpfUploadFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfUploadFile"
        Title="Upload File" Height="500" Width="800"
        WindowState="Maximized">
    <!-- Tùy chọn: mở cửa sổ toàn màn hình khi khởi động -->

    <Grid>

        <!-- Đảm bảo TabControl mở rộng theo Grid -->
        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TabItem Header="Trang chủ">
                <local:HomeControl />
            </TabItem>
            <TabItem Header="Chức Năng Chính">
                <local:FileConversionControl />
            </TabItem>
            <TabItem Header="Quản Lý Dữ Liệu">
                <local:FileListControl />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
